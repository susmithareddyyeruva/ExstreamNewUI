<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/login_form_border"
        android:elevation="5dp"
        android:layout_margin="@dimen/dimen10"
        android:padding="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_exstream"
                android:layout_marginTop="@dimen/dimen10"
                android:textStyle="bold"
                android:fontFamily="@font/oswald_extralight"
                android:textSize="16sp"
                android:layout_marginBottom="@dimen/dimen10"
                android:textColor="@color/dailog_text"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/oswald_extralight"
                android:textColor="@color/dailog_text"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/develop_across"
                android:layout_marginTop="@dimen/dimen5"
                android:fontFamily="@font/oswald_extralight"
                android:textSize="16sp"
                android:layout_marginBottom="@dimen/dimen10"
                android:textColor="@color/dailog_text"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/aboutus_txt"
                android:layout_marginTop="@dimen/dimen5"
                android:fontFamily="@font/oswald_extralight"
                android:textSize="16sp"
                android:layout_marginBottom="@dimen/dimen10"
                android:textColor="@color/dailog_text"
                />

        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>